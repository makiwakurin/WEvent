<div class="container-fluid  w-100">
<div class=" d-flex justify-content-center w-100">
  <div class="mb-3 mt-4 w-75">
    <h3 class="text-center">ログイン</h3>
    <%= render 'shared/error_messages', model: @user %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3 ">
        <%= f.label :email, class:"form-label align-items-center" %><br />
        <div class="col-sm-8 d-flex flex-column align-items-center w-100">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :password, class:"form-label align-items-center" %><br />
        <div class="col-sm-8 d-flex flex-column align-items-center w-100 ">
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
        </div>
      </div>

      <div class="mb-3">
        <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class:"form-label align-items-center" %>
      </div>
    <% end %>

  <div class="actions mb-3">
    <%= f.submit "ログイン", class:"btn btn-primary btn-lg" %>
  </div>
<% end %>

  <div class="mb-3 mt-5">
    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
