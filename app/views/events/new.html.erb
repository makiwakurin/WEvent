<div class="contents">
  <div class="container">
    <h3>投稿する</h3>
    <%= form_with(model: @event, local:true) do |form| %>
      <%= form.text_field        :name,        placeholder: "キャンプなど" %>
      <%= form.text_field        :location,    placeholder: "場所" %>
      <%= form.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"select-box", id:"event-genre"}) %>
      <%= form.text_field        :date,        placeholder: "2020/1/1" %>
      <%= form.text_area         :description, placeholder: "キャンプなど" %>
      <input name="event[user_ids][]" type="hidden" value=<%= current_user.id %>>
    <%= form.submit "send" %>
    <% end %>
  </div>
</div>